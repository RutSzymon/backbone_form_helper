<div class="checkbox">
  <input name="<%= @field_name %>" type="hidden" value="false">
  <input id="<%= @field_id %>" name="<%= @field_name %>" type="checkbox"
    value="true" <%= 'checked' if _.contains([1,'1',true,'true'], @value) %>>
  <% if @title: %><label for="<%= @field_id %>"><%= @title %></label><% end %>
</div>
